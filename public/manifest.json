{
  "manifest_version": 3,

  "name": "Sprinklr SDK Extension",

  "version": "1.0.0",

  "description": "This extension helps in debugging customer experience",

  "icons": {
    "128": "logo.png"
  },

  "action": {
    "default_popup": "index.html",
    "default_icon": {
      "128": "logo.png"
    }
  },

  "permissions": ["activeTab", "system.cpu", "tabs", "debugger", "downloads"],

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["sdk.js"]
    }
  ],

  "background": {
    "service_worker": "background.js"
  }
}
